<%-include('header')-%>
<style>
  .prd-bottom button{
    border-radius: 10px;
    border: none;
  }
  
</style>
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
  <div class="container">
    <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
      <div class="col-first">
        <h1>PRODUCT SEARCH RESULTS</h1>
      </div>
    </div>
  </div>
</section>
<!-- End Banner Area -->
<div class="container">
  <div class="row">
    
    <div class="col-xl-9 col-lg-8 col-md-7">
      <!-- Start Filter Bar -->
      <div class="filter-bar d-flex justify-content-between align-items-center">
        <div>
          <h5>Search results for "<%= searchQuery %>"</h5>
          <a href="/products" class="btn btn-warning">Clear Search</a>
        </div>
        
        
        <div class="pagination">
          <% if (cp > 1) { %>
            <a href="/search?page=<%= cp - 1 %>&search=<%= searchQuery %>" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
          <% } %>
          

          <a href="javascript:void(0)" class="active" ><%= cp %></a>

          <% if (remain>0) { %>
            <a href="/search?page=<%= cp + 1 %>&search=<%= searchQuery %>" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
          <% } %>
          
        </div>
        
      </div>
      
      <!-- End Filter Bar -->
      <!-- Start Best Seller -->
      <section class="lattest-product-area pb-40 category-list">
        <div class="row">
          <!-- single product -->
          <% if(prods.length===0) { %>
            <div class="d-flex justify-content-center align-items-center " style="min-height: 30vh;min-width: 30vh;">
              <h2 class="text-warning">No Products</h2>
            </div>
          <%} else{ %>
          <% prods.forEach(function(prod, index) { %>
            
          <div class="col-lg-4 col-md-6">
            <div class="single-product">
              <img class="img-fluid" src="/productImages/<%= prod.images[0] %>" alt="">
              <div class="product-details">
                <h6><%= prod.brand +' '+ prod.name %></h6>
                  <div class="price">
                    <h6>Rs. <%= prod.salePrice %></h6>
                    <h6 class="l-through">Rs. <%= prod.regularPrice %></h6>
                  </div>
                  <div class="prd-bottom">
                    <form action="/addToCart" method="post" style="display: inline;">
                    <input type="hidden" value="<%= prod._id %>" name="id">
                    <button class="btn-danger btn-rounded" >Add to cart</button>
                  </form>
                    <button class="btn-primary btn-rounded"><a href="/productdetails?id=<%= prod._id %>" style="text-decoration: none;color: white;">View More</a></button>
                  <!-- <a href="/productdetails?id=<%= prod._id %>" class="social-info">
                    <span class="lnr lnr-move"></span>
                    <p class="hover-text">view more</p>
                  </a> -->
                </div>
              </div>
            </div>
          </div>
          <% }); %>
          <% } %>
        </div>
      </section>
      <!-- End Best Seller -->
      <!-- Start Filter Bar -->

    </div>
  </div>
</div>



<%-include('footer')-%>